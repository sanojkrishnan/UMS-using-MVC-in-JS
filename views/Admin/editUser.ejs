<% include("../layouts/header.ejs") %>

    <h1>Edit User</h1>

    <form action="" method="post">

        <input type="name" name="name" placeholder="Enter Name" value="<%=user.name%>" required>
        <br><br>
        <input type="email" name="email" placeholder="Enter email" value="<%=user.email%>" required>
        <br><br>
        <input type="text" name="mno" placeholder="Enter Mobile" value="<%=user.mobile%>" required>
        <br><br>
        <label for="verify">Verified</label>
        <input type="radio" id="verify" name="verify" value="1" <% if(user.is_verified==1){%>checked<%}%>><br>
            <label for="unverify">not verified</label>
            <input type="radio" id="unverify" name="verify" value="0" <% if(user.is_verified==0){%>checked<%}%>>
                <br><br>
                <input type="hidden" name="id" value="<%= user._id %>">
                <input type="submit" value="update User">

    </form>

    <a href="/admin">go to dashboard</a>










